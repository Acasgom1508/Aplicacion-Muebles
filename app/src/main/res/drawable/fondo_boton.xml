<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- Fondo principal del botón -->
    <solid android:color="#D9E8F4" /> <!-- Color de fondo similar al de la imagen -->

    <!-- Esquinas redondeadas -->
    <corners android:radius="20dp" />

    <!-- Borde del botón -->
    <stroke
        android:width="1dp"
        android:color="#B0BEC5" /> <!-- Color gris para el borde -->

    <!-- Sombra (solo funciona con CardView) -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />
</shape>
